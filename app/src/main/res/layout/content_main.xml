<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.imotom.dm.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_offLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        android:id="@+id/ll_cameraLiXian_main"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/iv_item_icon"
                android:layout_width="@dimen/item_icon_size"
                android:layout_height="@dimen/item_icon_size"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/camera_off_icon" />

            <TextView
                android:id="@+id/tv_cameraItem_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dp"
                android:layout_marginRight="8.0dp"
                android:layout_weight="1.0"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        android:id="@+id/ll_carLiXian_main"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="@dimen/item_icon_size"
                android:layout_height="@dimen/item_icon_size"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/cheji_off_icon" />

            <TextView
                android:id="@+id/tv_carItem_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.0dp"
                android:layout_marginRight="8.0dp"
                android:layout_weight="1.0"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
